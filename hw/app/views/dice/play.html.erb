<img src="http://jeffcohenonline.com/dice/<%= @numbers[0] %>.png">
<img src="http://jeffcohenonline.com/dice/<%= @numbers[1] %>.png">

<% if @status == "win" %>
	<h3> You win! </h3>
	<div><a href="/dice">Play again</a></div>
<% elsif @status == "lose" %>
	<h3> You lose </h3>
	<div><a href="/dice">Play again</a></div>
<% elsif @status == "start" %>
	<h3> You must roll <%= @target%> to win </h3>
	<h4> Try to roll <%=@numbers[0] + @numbers[1]%> again. If you roll a 7, you lose. </h4>
	<div><a href="/dice/play?target=<%=@target%>">Roll again!</a></div>
<% else %>
	<h3> You rolled <%= @numbers[0]+@numbers[1]%> but you need <%=@target%>. If you roll a 7, you lose. </h3>
	<div><a href="/dice/play?target=<%=@target%>">Roll again!</a></div>
<% end %>